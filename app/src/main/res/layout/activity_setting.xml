<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.slsindupotha.Setting">

    <include
        android:id="@+id/toolbar_main"
        layout="@layout/row_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:layout_marginRight="50dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Font Size"
            android:textSize="20sp"
            android:id="@+id/fontsize"
            android:fontFamily="@font/malithi"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <Switch
        android:id="@+id/switch1"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/malithi"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Dark Mode"
        android:textColor="#000"
        android:textSize="20sp"
        android:theme="@style/SCBSwitch"
        android:thumbTint="@color/PINK"
        android:trackTint="@color/pdlg_color_yellow" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvDatabaseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="Last Update"
            android:textColor="#000"
            android:textSize="20sp"

            />
    <TextView
        android:id="@+id/tvUpdateDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Updating ."
        android:layout_weight="1"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:textSize="14sp"
        />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manually sync"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="18sp"
        android:clickable="true"
        android:onClick="onClick"
        android:visibility="gone"

        />



</LinearLayout>